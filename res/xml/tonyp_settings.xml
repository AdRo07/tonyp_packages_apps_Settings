<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="category_hybrid_options"
        android:title="@string/display_hybrid_options_title" >
        
        <PreferenceScreen
            android:key="hybrid_settings"
            android:title="@string/hybrid_settings_title"
            android:fragment="com.android.settings.hybrid.HybridSettings" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_notifications_options"
        android:title="@string/display_notifications_options_title" >
        
        <PreferenceScreen
            android:key="halo_settings"
            android:title="@string/halo_settings_title"
            android:fragment="com.android.settings.tonyp.Halo" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_statusbar_options"
        android:title="@string/display_statusbar_options_title" >

        <PreferenceScreen
            android:fragment="com.android.settings.cyanogenmod.StatusBarStyle"
            android:key="status_bar_background_style"
            android:title="@string/status_bar_background_style" />

        <Preference
            android:fragment="com.android.settings.slim.NotificationDrawerStyle"
            android:key="notification_style"
            android:title="@string/notification_style_title" />

        <PreferenceScreen
            android:key="notification_drawer"
            android:fragment="com.android.settings.cyanogenmod.NotificationDrawer"
            android:title="@string/notification_drawer_title"
            android:summary="@string/notification_drawer_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_various_options"
        android:title="@string/display_various_options_title" >

        <PreferenceScreen
            android:key="custom_carrier_label"
            android:title="@string/custom_carrier_label_title" />

        <ListPreference
            android:key="pref_low_battery_warning_policy"
            android:title="@string/pref_low_battery_warning_policy_title"
            android:dialogTitle="@string/pref_low_battery_warning_policy_dialog_title"
            android:entries="@array/pref_low_battery_warning_policy_entries"
            android:entryValues="@array/pref_low_battery_warning_policy_values"
            android:defaultValue="0" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_animation_options"
        android:title="@string/display_animation_options_title" >

        <PreferenceScreen
            android:key="system_animations"
            android:title="@string/title_animation_controls"
            android:summary="@string/header_summary_animation"
            android:fragment="com.android.settings.cyanogenmod.fragments.AnimationControls" />

        <ListPreference
            android:key="listview_animation"
            android:dialogTitle="@string/listview_animation_title"
            android:title="@string/listview_animation_title"
            android:entries="@array/listview_animation_entries"
            android:entryValues="@array/listview_animation_values"
            android:defaultValue="1" />

         <ListPreference
            android:key="listview_interpolator"
            android:dialogTitle="@string/listview_interpolator_title"
            android:title="@string/listview_interpolator_title"
            android:entries="@array/listview_interpolator_entries"
            android:entryValues="@array/listview_interpolator_values"
            android:defaultValue="0" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_donate_options"
        android:title="@string/display_donate_options_title" >

        <Preference
            android:key="donate"
            android:title="@string/donate_tonyp_title"
            android:summary="@string/donate_tonyp_summary" /> 

    </PreferenceCategory>

</PreferenceScreen>
