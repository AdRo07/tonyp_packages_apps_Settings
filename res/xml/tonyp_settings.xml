<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="category_donate_options"
        android:title="@string/display_donate_options_title" >

        <Preference
            android:key="donate"
            android:title="@string/donate_tonyp_title"
            android:summary="@string/donate_tonyp_summary" /> 

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_hybrid_options"
        android:title="@string/display_hybrid_options_title" >
        
        <PreferenceScreen
            android:key="hybrid_settings"
            android:title="@string/hybrid_settings_title"
            android:fragment="com.android.settings.hybrid.HybridSettings" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_various_options"
        android:title="@string/display_various_options_title" >

        <PreferenceScreen
            android:key="custom_carrier_label"
            android:title="@string/custom_carrier_label_title" />

        <ListPreference
            android:key="pref_low_battery_warning_policy"
            android:title="@string/pref_low_battery_warning_policy_title"
            android:dialogTitle="@string/pref_low_battery_warning_policy_dialog_title"
            android:entries="@array/pref_low_battery_warning_policy_entries"
            android:entryValues="@array/pref_low_battery_warning_policy_values"
            android:defaultValue="0" />

        <PreferenceScreen
            android:key="recents_ram_bar"
            android:fragment="com.android.settings.cyanogenmod.RamBar"
            android:title="@string/ram_bar" />

        <PreferenceScreen
            android:fragment="com.android.settings.cyanogenmod.StatusBarStyle"
            android:key="status_bar_background_style"
            android:title="@string/status_bar_background_style" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_halo_options"
        android:title="@string/display_halo_options_title" >

        <ListPreference
            android:key="halo_state"
            android:dialogTitle="@string/halo_state_title"
            android:title="@string/halo_state_title"
            android:summary="@string/halo_state_summary"
            android:entries="@array/entries_halo_state"
            android:entryValues="@array/values_halo_state" />

        <CheckBoxPreference
            android:key="halo_hide"
            android:title="@string/halo_hide_title"
            android:summary="@string/halo_hide_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="halo_reversed"
            android:title="@string/halo_reversed_title"
            android:summary="@string/halo_reversed_summary"
            android:defaultValue="true" />

        <ListPreference
            android:key="halo_size"
            android:dialogTitle="@string/halo_size_title"
            android:title="@string/halo_size_title"
            android:summary="@string/halo_size_summary"
            android:entries="@array/entries_halo_size"
            android:entryValues="@array/values_halo_size" />

        <CheckBoxPreference
            android:key="halo_pause"
            android:title="@string/halo_pause_title"
            android:summary="@string/halo_pause_summary" />

    </PreferenceCategory>

</PreferenceScreen>
